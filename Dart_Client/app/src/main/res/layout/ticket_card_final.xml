<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardBackgroundColor="@color/off_white"
    app:cardCornerRadius="7dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/first_line_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/dart_cream"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dart" />


        <TextView
            android:id="@+id/train_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingEnd="5dp"
            android:text="IE375"
            android:textColor="@color/dark_grey"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/originTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginStart="10dp"
            android:text="ORIGIN"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/direction" />

        <TextView
            android:id="@+id/destTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/logo"
            android:layout_marginEnd="10dp"
            android:paddingEnd="5dp"
            android:text="DEST"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/line_across"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/destTicket"
            android:background="#c0c0c0"
            android:padding="0dp" />

    </RelativeLayout>
<LinearLayout
    android:id="@+id/mainHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/first_col_V"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="SCHARR"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/expArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPARR"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:text="ORIGIN"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="italic"
            android:text="DEST"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:text="Currently: "
            android:textAlignment="textStart"
            android:textDirection="ltr"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_col_V"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dest_schArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SCHARR"
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dest_expArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPARR"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:text="@string/late"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dueIn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/due"
                android:textDirection="ltr"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/go_btn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:src="@drawable/go" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>


