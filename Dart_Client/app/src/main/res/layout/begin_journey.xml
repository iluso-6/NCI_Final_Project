<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_green"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:addStatesFromChildren="false">

        <ImageView
            android:id="@+id/ticket_bitmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_button" />

        <ToggleButton
            android:id="@+id/favouriteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="30dp"
            android:background="@android:drawable/btn_star"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

        <ProgressBar
            android:id="@+id/progressBarBegin"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/infobox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/dark_grey"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/org_viewed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cross_eye"
            android:visibility="visible" />

        <TextView
            android:id="@+id/origin_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:padding="2dp"
            android:text="textbox1"
            android:textSize="10sp"
            android:textColor="@color/off_white"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/dest_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:padding="2dp"
            android:text="textbox2"
            android:textSize="10sp"
            android:textColor="@color/off_white"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/dest_viewed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:layout_marginEnd="4dp"
            android:src="@drawable/cross_eye"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_insert"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@color/dark_grey"
        android:baselineAligned="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="100dp"
            android:background="@drawable/cancel_btn_selector" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="100dp"
            android:background="@drawable/close_btn_selector" />
    </LinearLayout>
</LinearLayout>
